<% if likes.any? %>
  <ul class="list-unstyled mt-2">
    <% likes.each do |like| %>
      <li class="mb-3 d-flex">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(like.user, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= link_to like.user.name, user_path(like.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= like.created_at %></span>
          <div>
            <p><%= like.content %></p>
          </div>
          <div>
            <% if current_user == like.user %>
              <%= link_to "Delete", like, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
            <%= render "favorites/favorite_button", micropost: like %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>